{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
}
